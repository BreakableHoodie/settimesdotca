# Security headers applied to ALL files first
/*
  # Prevent clickjacking
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Referrer policy for privacy
  Referrer-Policy: strict-origin-when-cross-origin

  # Force HTTPS (HSTS)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Legacy XSS protection
  X-XSS-Protection: 1; mode=block

  # Cross-Origin policies
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

  # Content Security Policy
  Content-Security-Policy: default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' data: https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https: blob:; script-src 'self' 'unsafe-inline' https://static.cloudflareinsights.com; connect-src 'self' https://*.settimes.ca https://*.pages.dev https://cloudflareinsights.com https://static.cloudflareinsights.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests

  # Permissions policy (disable unnecessary features)
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=()

# Cache control for static assets (versioned JS/CSS bundles)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache static resources (fonts, images, etc)
/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache manifest with shorter TTL
/manifest.json
  Cache-Control: public, max-age=86400

# Prevent caching of HTML files (Safari fix)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Prevent caching of data and service worker files
/bands.json
  Cache-Control: no-cache, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

/sw.js
  Cache-Control: no-cache, must-revalidate, max-age=0

/_redirects
  Cache-Control: no-cache, must-revalidate, max-age=0

/robots.txt
  Cache-Control: public, max-age=3600

/sitemap.xml
  Cache-Control: public, max-age=3600
