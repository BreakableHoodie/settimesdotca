# Cache static assets aggressively
/assets/*
  Cache-Control: public, max-age=604800, immutable

# Prevent caching of HTML and data files (Safari fix)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/bands.json
  Cache-Control: no-cache, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

/sw.js
  Cache-Control: no-cache, must-revalidate, max-age=0

# Security headers for all other files
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' data: https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https://cdnjs.cloudflare.com; script-src 'self' 'unsafe-inline'; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  Permissions-Policy: geolocation=(), microphone=(), camera=()
